<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:id="@+id/user_Layout">

    <ImageView
        android:id="@+id/p"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/fn"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="top"
        android:layout_toRightOf="@+id/p"
        android:layout_toEndOf="@+id/p"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ln"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_gravity="top"
        android:layout_toRightOf="@+id/fn"
        android:layout_toEndOf="@+id/fn"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/agelabel"
        android:layout_toRightOf="@+id/p"
        android:layout_toEndOf="@+id/p"
        android:layout_below="@+id/fn"
        android:text="Age: "
        android:textSize="16sp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/agelabel"
        android:layout_toEndOf="@+id/agelabel"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/fn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/deptlabel"
        android:layout_toRightOf="@+id/p"
        android:layout_toEndOf="@+id/p"
        android:layout_below="@+id/agelabel"
        android:text="Dept: "
        android:textSize="16sp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/deptlabel"
        android:layout_toEndOf="@+id/deptlabel"
        android:layout_below="@+id/date"
        android:paddingRight="16dp"
        android:layout_marginTop="3dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/gen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:visibility="gone"
        android:paddingRight="16dp"/>

</RelativeLayout>